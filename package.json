{
  "name": "mcpspec",
  "version": "1.2.1",
  "private": true,
  "description": "The definitive MCP server testing platform",
  "packageManager": "pnpm@10.30.0",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "turbo test",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "clean": "turbo clean",
    "publish:all": "pnpm build && pnpm -r publish --access public --no-git-checks",
    "publish:dry": "pnpm build && pnpm -r publish --access public --no-git-checks --dry-run"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.4.0",
    "prettier": "^3.2.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  }
}
